# Slack App Configuration
# Copy this to .env and fill in your values

# Bot User OAuth Token (starts with xoxb-)
# Get from: https://api.slack.com/apps/YOUR_APP_ID/oauth
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Signing Secret for verifying requests
# Get from: https://api.slack.com/apps/YOUR_APP_ID/general
SLACK_SIGNING_SECRET=your-signing-secret

# Webhook server configuration
SLACK_WEBHOOK_PORT=3000

# Optional: Workspace ID
SLACK_TEAM_ID=T00000000

# Optional: Default channel for notifications
SLACK_DEFAULT_CHANNEL=general

# Feature flags
SLACK_AUTO_ARCHIVE=true
SLACK_REMINDER_MINUTES=15
SLACK_HEALTH_CHECK_INTERVAL=30
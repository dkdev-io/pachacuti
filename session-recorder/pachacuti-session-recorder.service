[Unit]
Description=Pachacuti Session Recorder
After=network.target

[Service]
Type=simple
User=Danallovertheplace
WorkingDirectory=/Users/Danallovertheplace/pachacuti/session-recorder
Environment=NODE_ENV=production
ExecStart=/usr/bin/node index.js
Restart=on-failure
RestartSec=10
KillMode=process

[Install]
WantedBy=multi-user.target
